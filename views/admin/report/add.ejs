<% layout('../layout/index') %>

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Báo cáo
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Station</li>
  </ol>
</section>

<div class="panel-heading">
	<!-- Báo cáo
	<span style="float: right;"><a href="/admin/station">Home</a></span> -->
</div>

<!-- Main content -->
<section class="content container-fluid">
	<div class="row">
	  <div class="col-xs-12">
	    <div class="box">
	      <div class="box-header">
	        <h3 class="box-title">Tải báo cáo điện</h3>
	      </div>
	      <!-- /.box-header -->
	      <div class="box-body">
          <!-- old: /report/manual/w -->
	        <form method="post" action="/member/report">     
            <div class="form-row">
              
              <div class="col-md-4 mb-3">
                <label>Trạm</label>
                <select class="form-control" name="site_id">
                  <% stations.forEach(function(station) { %>
                    <% if( user.role == 'SA') { %>
                      <option value="<%= station._id %>"><%= station.name %></option>
                    <% } else { %>
                      <% user.stations.forEach(function(s){ %>
                        <!-- <option value=""><%= station._id %> - <%= s %></option> -->
                        <% if(station._id.toString() == s.toString()) { %>
                          <option value="<%= station._id %>"><%= station.name %></option>
                        <% } %>
                      <% }) %>
                    <% } %>
                  <% }) %>
                </select>
              </div>
      
              <div class="col-md-4 col-sm-6">
                <label>Từ ngày</label>
                <input type="date" class="form-control" name="date_start" placeholder=""
                  value="" required>
              </div>
          
              <div class="col-md-4 col-sm-6">
                <label>Đến ngày</label>
                <input type="date" class="form-control" name="date_end" placeholder=""
                  value="" >
              </div>
      
              
             </div>
              
            <div class="form-row">
              <div class="col-md-12 mb-3 col-sm-6">
              <br>
                <button class="btn btn-success" type="submit">Get report </button>
              </div>
            </div>
           
          </form>
	      </div>
	      <!-- /.box-body -->
	    </div>
	    <!-- /.box -->
	  </div>
	  <!-- /.col -->
	</div>

</section>



