<% layout('../layout/index') %>

<div class="panel-heading">
	Device Edit: <%= device.name %>
	<span style="float: right;"><a href="/device">Home</a></span>
</div>
<div class="panel-body">

<form method="post" action="/device/edit/<%= device.id %>">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label>Station</label>
      <select class="form-control" name="station">
        <% stations.forEach(function(station) { %>
          <option value="<%= station.name %>"
            <%if (device.station === station.name) { %>
              selected=""
            <% } %>
            ><%= station.description %></option>
        <% }); %>
      </select>
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Name</label>
      <input type="text" class="form-control" name="name" placeholder="Name..."
        value="<%= device.name %>">
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Description</label>
      <input type="text" class="form-control" name="description" placeholder="Description..."
        value="<%= device.description %>">
    </div>
    <div class="col-md-4 mb-3">
      <label>Active</label>
      <select class="form-control" name="active">
        <option value="1" selected="">1</option>
        <option value="0">0</option>
      </select>
    </div>
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Information</label>
      <input type="text" class="form-control" name="information" placeholder="Information..."
        value="<%= device.information %>" required>
    </div>
    
    <div class="col-md-4 mb-3 col-sm-6">
      <label>Note</label>
      <input type="text" class="form-control" name="note" placeholder="Note..."
        value="<%= device.note %>" >
    </div>
   </div>
    
  <div class="form-row">
    <div class="col-md-12 mb-3 col-sm-6">
    <br>
      <button class="btn btn-success" type="submit">Edit </button>
    </div>
  </div>
 
</form>
</div>

